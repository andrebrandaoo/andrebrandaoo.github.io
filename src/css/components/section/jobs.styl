#jobs
  .button
    &.top
      margin-top 40px
    &.bottom
      margin-bottom 40px

  .container
    position relative

  #jobs-list
    z-index 10
    max-width 750px
    margin 0 auto
    overflow hidden
    .item
      float left
      position relative
      &:focus
        outline none
      &:hover
        .icon
          opacity 1
          transition ease .3s
          i
            top 0
            transition ease .5s

      img
        width 100%

      h3
        margin-bottom 5px
        font-size 1.5rem
        color $colors['secondary']
      .at
        margin-bottom 10px
        display block
        font-size 1rem
        color $colors['fg1']

      a
        display block
        width 100%
      a, a img
        position relative
        z-index 5
        height 100%
        &:focus
          outline none

      .icon
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        display flex
        opacity 0
        width 100%
        height 100%
        z-index 10
        font-size 3rem
        align-items center
        color rgba(255, 255, 255, .9)
        transition ease .3s
        background-color rgba($colors['primary'], .9)
        i
          width 100%
          text-align center
          position relative
          top -100px
          transition ease .5s

  .prevArrow
    position absolute
    top 50%
    left 10px
    margin-top -20px !important
    display block

  .nextArrow
    position absolute
    top 50%
    right 10px
    margin-top -20px !important
    display block

  .prevArrow,
  .nextArrow
    @media(max-width 768px)
      display none !important
